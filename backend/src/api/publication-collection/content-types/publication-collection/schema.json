{
  "kind": "collectionType",
  "collectionName": "publication_collections",
  "info": {
    "singularName": "publication-collection",
    "pluralName": "publication-collections",
    "displayName": "Publication Collection"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "logo": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "description": {
      "type": "string"
    },
    "article_collections": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::article-collection.article-collection",
      "private": true,
      "mappedBy": "publication_collection"
    }
  }
}
